---
interface Props {
  name: string;
  size?: string;
  color?: string;
  class?: string;
}

const { name, size = "1rem", color, class: className } = Astro.props;

// Lucide-style icons - clean, modern stroke-based design
const icons: Record<string, string> = {
  // Zap icon for Vite/intro
